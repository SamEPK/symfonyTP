{% extends 'base.html.twig' %}

{% block title %}Détail de la Catégorie{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4 text-primary">Détail de la Catégorie</h1>

    <table class="table table-bordered table-hover">
        <tbody>
            <tr>
                <th scope="row" class="table-secondary">Id</th>
                <td>{{ categorie.id }}</td>
            </tr>
            <tr>
                <th scope="row" class="table-secondary">Nom</th>
                <td>{{ categorie.nom }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-between mt-4">
        <a href="{{ path('app_categorie_index') }}" class="btn btn-outline-primary">
            <i class="fas fa-arrow-left"></i> Retour à la liste
        </a>

        {% if is_granted('ROLE_ADMIN') %}
        <div>
            <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="btn btn-warning">
                <i class="fas fa-edit"></i> Modifier
            </a>
            {{ include('categorie/_delete_form.html.twig', { 'button_label': 'Supprimer' }) }}
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
